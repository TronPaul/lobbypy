<html metal:use-macro="master.macros['base']">
   <div metal:fill-slot="content">
      <form tal:condition="hasattr(request, 'player')" action="${request.route_path('lobby_create')}" method="POST">
         Lobby Name: <input type="text" name="name" />
         <input type="submit">
      </form>
      <div id="lobbies">
         <ul>
            <li tal:repeat="lobby lobbies">
            <a href="${request.route_path('lobby',lobby_id=lobby.id)}"><span tal:content="lobby.name">Lobby Name</span></a>
            </li>
         </ul>
      </div>
   </div>
</html>
