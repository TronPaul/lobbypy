<html metal:use-macro="master.macros['base']">
   <div metal:fill-slot="content">
      <form action="${request.resource_url(request.root['lobby'], 'create')}" method="POST">
         Lobby Name: <input type="text" name="name" />
         <input type="submit">
      </form>
      <div id="lobbies">
         <ul>
            <li tal:repeat="lobby lobbies">
               <span tal:content="lobby.name">Lobby Name</span>
            </li>
         </ul>
      </div>
   </div>
</html>
